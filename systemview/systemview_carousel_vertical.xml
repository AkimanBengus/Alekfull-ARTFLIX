<theme>
	<formatVersion>4</formatVersion>

	<view name="system">

		<carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>00000000</color>
			<logoScale>1.35</logoScale>
			<logoSize>0.18 0.18</logoSize>
			<logoAlignment>right</logoAlignment>
			<maxLogoCount>5</maxLogoCount>
			<defaultTransition>fade</defaultTransition>
			<zIndex>50</zIndex>
		</carousel>

		<image name="logoHeader" extra="true">
			<storyboard>
                <animation property="x" from="0.175" begin="0" duration="350" mode="easeOut"/>
                <animation property="y" from="0.90" begin="0" duration="350" mode="easeOut"/>
                <animation property="opacity" from="0.5" to="1" duration="50" mode="linear"/>
                <animation property="scale" from="0.5" to="1" duration="350" mode="easeOut"/>
            </storyboard>
		</image>

	</view>

</theme>
