<theme>
	<formatVersion>4</formatVersion>

	<include subset="HeaderStyle" name="System Logo" displayName="System Logo">./systemview_header_logo.xml</include>
	<include subset="HeaderStyle" name="System Name" displayName="System Name">./systemview_header_text.xml</include>

	<include subset="CarouselStyle" name="Horizontal" displayName="Horizontal">./systemview_carousel_horizontal.xml</include>
	<include subset="CarouselStyle" name="Vertical" displayName="Vertical">./systemview_carousel_vertical.xml</include>
	<include subset="CarouselStyle" name="Vertical Wheel" displayName="Vertical Wheel">./systemview_carousel_vertical_wheel.xml</include>

	<variables>
		<subset.HeaderStyle>Header Style</subset.HeaderStyle>
		<subset.CarouselStyle>Carousel Style</subset.CarouselStyle>
	</variables>

	<view name="system">

		<image name="art" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
		</image>

		<image name="background" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./../assets/overlaySystemData.png</path>
			<zIndex>41</zIndex>
		</image>

		<image name="logo">
			<!-- try svg -->
			<path>./../assets/logos/$system.png</path>
			<!-- try png -->
			<path>./../assets/logos/$system2.png</path>
		</image>

		<image name="logoHeader">
			<!-- try svg -->
			<path>./../assets/logos/$system.png</path>
			<!-- try png -->
			<path>./../assets/logos/$system2.png</path>
		</image>

		<text name="logoText">
			<fontPath>./../assets/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>center</alignment>
			<fontSize>0.08</fontSize>
			<lineSpacing>1</lineSpacing>
			<glowColor>00000016</glowColor>
			<glowSize>4</glowSize>
			<forceUppercase>true</forceUppercase >
    	</text>

		<text name="info3" extra="true">
			<fontPath>./../assets/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.020 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>


		<text name="info4" extra="true">
			<fontPath>./../assets/Circular Std Book.ttf</fontPath>
			<color>5c5b5c</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.195 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="info1" extra="true">
			<fontPath>./../assets/Circular Std Book.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.02 0.4</pos>
			<size>0.30 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="binding_totalGames" extra="true">
			<text>{binding:total} Jeux</text>
			<fontPath>./../assets/Circular Std Book.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>center</alignment>
			<fontSize>0.018</fontSize>
			<lineSpacing>1</lineSpacing>
			<origin>0.5 0.5</origin>
			<size>0.35 0.045</size>
			<pos>0.17 0.575</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<video name="md_video" extra="true">
			<path>{random}</path>
			<origin>0.5 0.5</origin>
			<pos>0.17 0.76</pos>
			<maxSize>0.30 0.30</maxSize>
			<delay>0.3</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<zIndex>50</zIndex>
		</video>

		<text name="systemInfo">
			<visible>false</visible>
		</text>

		<helpsystem name="help">
			<fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
			<fontSize>0.017</fontSize>
			<pos>0.02 0.955</pos>
			<textColor>FFFFFF</textColor>
		</helpsystem>


		<text name="info5" extra="true">
			<text>FABRICANTE:</text>
		</text>

		<text name="info5" extra="true" region="PTBR">
			<text>FABRICANTE:</text>
		</text>

		<text name="info5" extra="true" region="EN">
			<text>MANUFACTURER:</text>
		</text>

		<text name="info5" extra="true" region="ES">
			<text>FABRICANTE:</text>
		</text>

		<text name="info5" extra="true" region="FR">
			<text>FABRICANT:</text>
		</text>

		<text name="info5" extra="true">
			<fontPath>./../assets/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.078 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

	</view>

</theme>
