<theme>
	<formatVersion>4</formatVersion>

	<view name="system">
 
		<image name="backgroundSystem" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
		</image>

		<image name="backgroundOverlay" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./../assets/backgroundOverlayLeftShadow.png</path>
			<zIndex>41</zIndex>
		</image>

		<image name="backgroundOverlayButton" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./../assets/backgroundOverlayTotalGamesButton.png</path>
			<zIndex>42</zIndex>
		</image>

		<image name="logo">
			<!-- try png -->
			<path>./../assets/logos/$system.png</path>
			<!-- try svg -->
			<path>./../assets/logos/$system.svg</path>
			<!-- check if lang resources exist -->
			<path>./../assets/logos/${system.theme}-${lang}.png</path>
			<path>./../assets/logos/${system.theme}-${lang}.svg</path>
		</image>

		<image name="logoHeader" extra="true">
			<!-- <visible>false</visible> -->
			<!-- try png -->
			<path>./../assets/logos/$system.png</path>
			<!-- try svg -->
			<path>./../assets/logos/$system.svg</path>
			<!-- check if lang resources exist -->
			<path>./../assets/logos/${system.theme}-${lang}.png</path>
			<path>./../assets/logos/${system.theme}-${lang}.svg</path>
		</image>

		<text name="logoText">
			<fontPath>./../fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>center</alignment>
			<fontSize>0.08</fontSize>
			<lineSpacing>1</lineSpacing>
			<glowColor>00000016</glowColor>
			<glowSize>4</glowSize>
			<forceUppercase>true</forceUppercase >
    	</text>

		<text name="mdex_systemYear" extra="true">
			<fontPath>./../fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.020 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="mdex_systemCreatorType" extra="true">
			<fontPath>./../fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.078 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="mdex_systemCreator" extra="true">
			<fontPath>./../fonts/Circular Std Book.ttf</fontPath>
			<color>5c5b5c</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.195 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="mdex_systemDescription" extra="true">
			<fontPath>./../fonts/Circular Std Book.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.02 0.4</pos>
			<size>0.30 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="binding_totalGames" extra="true">
			<text>{binding:total} Jeux</text>
			<fontPath>./../fonts/Circular Std Book.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>center</alignment>
			<fontSize>0.018</fontSize>
			<lineSpacing>1</lineSpacing>
			<origin>0.5 0.5</origin>
			<size>0.35 0.045</size>
			<pos>0.17 0.575</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<video name="md_video" extra="true">
			<path>{random}</path>
			<origin>0.5 0.5</origin>
			<pos>0.17 0.76</pos>
			<maxSize>0.30 0.30</maxSize>
			<delay>0.3</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<zIndex>50</zIndex>
		</video>

		<text name="systemInfo">
			<visible>false</visible>
		</text>

		<text name="mdex_systemCreatorType" extra="true">
			<text>FABRICANTE:</text>
		</text>

		<text name="mdex_systemCreatorType" extra="true" region="PTBR">
			<text>FABRICANTE:</text>
		</text>

		<text name="mdex_systemCreatorType" extra="true" region="EN">
			<text>MANUFACTURER:</text>
		</text>

		<text name="mdex_systemCreatorType" extra="true" region="ES">
			<text>FABRICANTE:</text>
		</text>

		<text name="mdex_systemCreatorType" extra="true" region="FR">
			<text>FABRICANT:</text>
		</text>

	</view>

</theme>
