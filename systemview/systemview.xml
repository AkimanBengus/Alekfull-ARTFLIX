<theme>
	<formatVersion>4</formatVersion>

	<!--
		- $system (use only one type per text tag)

		Variables from es_systems.cfg
		- fullname: ${system.fullname} ex: Nintendo Entertainment System
		- name: ${system.name}         ex: nes
		- theme: ${system.theme}       ex: nes
	-->
	<include>./../metadata_ex/_mdex_systemCreatorType_manufacturer.xml</include>

	<view name="system">

		<image name="backgroundSystem" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<path>./assets/arts/default.jpg</path>
			<path>${backgroundPath}/$system.jpg</path>
		</image>

		<image name="backgroundOverlay" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./assets/backgroundOverlayLeftShadow.png</path>
			<zIndex>40</zIndex>
		</image>

		<image name="backgroundOverlayButton" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./assets/backgroundOverlayTotalGamesButton.png</path>
			<zIndex>42</zIndex>
		</image>

		<image name="logo">
			<!-- try png -->
			<path>./assets/logos/$system.png</path>
			<!-- try svg -->
			<!-- <path>./assets/logos/$system.svg</path> -->
		</image>

		<image name="logoHeader" extra="true">
			<!-- try png -->
			<path>./assets/logos/$system.png</path>
			<!-- try svg -->
		</image>

		<text name="logoText">
			<fontPath>./../fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>center</alignment>
			<fontSize>0.06</fontSize>
			<lineSpacing>1</lineSpacing>
			<glowColor>00000016</glowColor>
			<glowSize>2.5</glowSize>
    	</text>

		<text name="mdex_systemName" extra="true">
			<text>${system.fullName}</text>
			<fontPath>./../fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>center</alignment>
			<verticalAlignment>center</verticalAlignment>
			<fontSize>0.075</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.020 0.065</pos>
			<size>0.30 0.30</size>
			<maxSize>0.30 0.30</maxSize>
			<glowColor>00000016</glowColor>
			<glowSize>2.5</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="mdex_systemYear" extra="true">
			<fontPath>./../fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.020 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="mdex_systemCreatorType" extra="true">
			<fontPath>./../fonts/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.078 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="mdex_systemCreator" extra="true">
			<fontPath>./../fonts/Circular Std Book.ttf</fontPath>
			<color>5c5b5c</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.195 0.378</pos>
			<size>0.35 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="mdex_systemDescription" extra="true">
			<fontPath>./../fonts/Circular Std Book.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<pos>0.02 0.4</pos>
			<size>0.30 0</size>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<text name="binding_totalGames" extra="true">
			<text>{binding:total} Games</text>
			<text lang="fr">{binding:total} Jeux</text>
			<text lang="es">{binding:total} Juegos</text>
			<text lang="pt">{binding:total} Jogos</text>
			<fontPath>./../fonts/Circular Std Book.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>center</alignment>
			<fontSize>0.018</fontSize>
			<lineSpacing>1</lineSpacing>
			<origin>0.5 0.5</origin>
			<size>0.35 0.045</size>
			<pos>0.17 0.575</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		</text>

		<video name="md_video" extra="true">
			<path>{random}</path>
			<origin>0.5 0.5</origin>
			<pos>0.17 0.76</pos>
			<maxSize>0.30 0.30</maxSize>
			<delay>0.3</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<zIndex>50</zIndex>
		</video>

		<text name="systemInfo">
			<visible>false</visible>
		</text>

	</view>

</theme>
